{
  "name": "nitroplanner",
  "version": "1.0.0",
  "description": "AI-powered project management system",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "npm --workspace backend run build",
    "build:frontend": "npm --workspace frontend run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm --workspace backend start",
    "start:frontend": "npm --workspace frontend start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:setup": "cd backend && npm run db:migrate && npm run db:seed",
    "db:reset": "cd backend && npm run db:deploy && npm run db:seed",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm --workspace backend test",
    "test:frontend": "npm --workspace frontend test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "npm --workspace backend run lint",
    "lint:frontend": "npm --workspace frontend run lint",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "clean": "npm run clean:backend && npm run clean:frontend",
    "clean:backend": "npm --workspace backend run clean",
    "clean:frontend": "npm --workspace frontend run clean",
    "setup": "npm run install:all && npm run db:setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/NitroPlanner.git"
  },
  "keywords": [
    "automotive",
    "project-management",
    "ai",
    "typescript",
    "nextjs",
    "prisma"
  ],
  "author": "Your Name",
  "license": "MIT"
} 